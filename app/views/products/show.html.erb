<h1><%= @product.name %></h1>

<% @product.images.each do |image| %>
  <img src="<%= image.url %>" alt="" width="400">
<% end %>


<h3>Description: <%= @product.description %></h3>
<h3>Sku: <%= @product.sku %></h3>

<h3>Regular Price: <%= number_to_currency(@product.regular_price) %> </h3>
<h3>Price: <%= number_to_currency(@product.price) %></h3>
<h3>Savings: <%= number_to_currency(@product.price_savings) %></h3>
<h3>Discount: <%= number_to_percentage(@product.discount) %></h3>

<h3> <%= @product.stock_status %> </h3>

<h3>Supplier: <%= @product.supplier.name %> </h3>


<input type="button" name="" value="Edit" onclick="window.location.href='/products/<%= @product.id %>/edit'">

<a href="/products/<%= @product.id %>" data-method="delete">Delete</a>

