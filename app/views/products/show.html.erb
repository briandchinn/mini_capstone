<h1><%= @product.name %></h1>

<% @product.images.each do |image| %>
  <img src="<%= image.url %>" alt="" width="400">
<% end %>


<h3>Description: <%= @product.description %></h3>
<h3>Price: <%= @product.price %></h3>
<h3>In Stock: <%= @product.in_stock %></h3>
<h3>Supplier: <%= @product.supplier.name %> </h3>


<input type="button" name="" value="Edit" onclick="window.location.href='/products/<%= @product.id %>/edit'">

<a href="/products/<%= @product.id %>" data-method="delete">Delete</a>

